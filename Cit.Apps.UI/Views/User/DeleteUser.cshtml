@model Cit.Apps.Licensing.UI.ViewModels.UserDetailsModel

<div class="container">
    <div class="card mx-auto mt-5" style="max-width: 500px;">
        <div class="card-header text-center">
            <h2>Delete User</h2>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this user?</p>
            <p><strong>User ID:</strong> @Model.Id</p>
            <p><strong>Username:</strong> @Model.UserName</p>
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>

            <div class="row">
                <div class="col-md-7">
                    <a asp-action="ConfirmDeleteUser" asp-route-id="@Model.Id" class="btn btn-danger my-3">Delete</a>
                </div>

                <div class="col-md-4 mx-2">
                    <a asp-action="AllUsers" class="btn btn-info my-3">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>
