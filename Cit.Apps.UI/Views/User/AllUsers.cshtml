@model IEnumerable<Cit.Apps.Licensing.UI.ViewModels.UserDetailsModel>
<h1 class="text-center">User Details</h1>
<a class="nav-link text-dark btn btn-success text-white ms-auto col-2" asp-area="" asp-controller="User" asp-action="CreateUser">New User</a>

<table class="table">
    <thead>
        <tr>
@*            <th>User ID</th>*@
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
@*                <td>@user.Id</td>*@
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.CreatedAt</td>
                <td>
                    <a asp-action="UpdateUser" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
