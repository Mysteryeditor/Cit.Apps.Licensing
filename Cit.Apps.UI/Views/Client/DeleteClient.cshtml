@model Cit.Apps.Licensing.UI.ViewModels.CreateClientViewModel

@{
    ViewData["Title"] = "Delete Client";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Delete Client</h1>

                    <div>
                        <p>Are you sure you want to delete the client with the following details?</p>
                        <dl class="row">
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                            </dd>

                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.ContactNumber)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ContactNumber)
                            </dd>

                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.ContactPerson)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ContactPerson)
                            </dd>
                        </dl>

                        <form asp-action="DeleteClient" asp-controller="Client" method="post">
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Id)
                            <button type="submit" asp-controller="Client" asp-action="ConfirmDeleteClient" asp-route-id="@Model.Id" class="btn btn-danger">Delete</button>
                            <a asp-action="Clients" asp-controller="Dashboard" class="btn btn-primary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
