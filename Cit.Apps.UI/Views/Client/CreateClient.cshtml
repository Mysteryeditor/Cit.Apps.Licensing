@model Cit.Apps.Licensing.UI.ViewModels.CreateClientViewModel

@{
    ViewData["Title"] = "Create Client";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Create Client</h1>
                    @using (Html.BeginForm("CreateClient", "Client", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ContactNumber"></label>
                            <input type="number" asp-for="ContactNumber" class="form-control" />
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ContactPerson"></label>
                            <input asp-for="ContactPerson" class="form-control" />
                            <span asp-validation-for="ContactPerson" class="text-danger"></span>
                        </div>

                        <!-- You can uncomment and add the SubscriptionKey field if needed -->
                        <!-- <div class="form-group">
                            <label asp-for="SubscriptionKey"></label>
                            <input asp-for="SubscriptionKey" class="form-control" />
                        </div> -->

                        <button type="submit" class="btn btn-primary m-3">Submit</button>
                        <button asp-action="Clients" asp-controller="Dashboard"class="btn btn-primary m-3">Go Back</button>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
