<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cit.Apps.UI</title>
    <script src="https://kit.fontawesome.com/4f6b630aab.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.7.1.slim.js" integrity="sha256-UgvvN8vBkgO0luPSUl2s8TIlOSYRoGFAX4jlCIm9Adc=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <style>
        .sidebar.minimized {
            visibility: hidden;
        }

        body {
            /*background-color: #f6e7c5;*/
            color: #3d3321;
        }

        .nav-link {
            color: azure;
            text-transform: uppercase;
            font-size: 18px;
            /*font-weight: bold;*/
            font-family: 'Arvo', serif;
        }

            .nav-link:hover {
                color: azure;
            }


        .button-link {
            color: azure;
            text-decoration: none;
            font-size: 15px;
            text-transform: capitalize;
        }

            .button-link:hover {
                text-decoration: none;
            }


        ul {
            list-style-type: none;
            padding: 0 !important;
        }

        .sidebar {
            min-height: 100vh;
            background-color: lightgrey;
            /*border-right: 2px solid #C7B198;*/
        }

            .sidebar li {
                border-bottom: solid 1px;
            }

        .dashboard-content {
            min-height: 85%;
        }

        .sidebar-links {
            text-decoration: none;
            font-size: 17px;
            font-weight: 500;
            color: #3d3321;
        }

            .sidebar-links:hover {
                color: #f04c34;
            }

        .active {
            color: #f04c34;
            font-weight: bolder;
        }
    </style>
</head>
<body>
    @using Cit.Apps.Licensing.Shared.Utitlities;
    @using Microsoft.AspNetCore.Http
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    @{

        var username = @HttpContextAccessor.HttpContext.Session.GetString("username");
        var userId = @HttpContextAccessor.HttpContext.Session.GetString("userId");
    }

    <div class="container-fluid d-flex p-0">
        <div class="col-lg-3 sidebar-parent sidebar col-sm-3 p-0 ">
            <a class="text-black fs-1 text-decoration-none m-lg-5 nav-span" asp-action="Homepage" asp-controller="Dashboard">CIT.APPS</a>
            <button id="sidebar-toggle" class=" p-3 float-end mb-5 btn btn-link text-black">
                <i class="fas fa-bars fs-3"></i>
            </button>
            <ul class="mt-lg-5 ms-1">
                <li class="my-lg-2">
                    <div class="span-div py-lg-3">
                        <a class="text-decoration-none sidebar-links @Html.IsActive("Dashboard", "HomePage")" asp-action="HomePage" asp-area="" asp-controller="Dashboard">   <i class="fa-solid fa-house fs-4 me-3"></i> <span class="nav-span">Homepage</span></a>
                    </div>
                </li>


                <li class="my-lg-2">
                    <div class="span-div py-lg-3">
                        <a class="text-decoration-none sidebar-links @Html.IsActive("Dashboard", "Administration")" asp-action="Administration" asp-area="" asp-controller="Dashboard"><i class="fa-solid fa-lock fs-4 me-3"></i><span class="nav-span">Administration</span></a>
                    </div>
                </li>

                <li class="span-div my-lg-2">
                    <div class="py-lg-3">
                        <a class="text-decoration-none sidebar-links @Html.IsActive("Dashboard", "Applications")" asp-action="Applications" asp-area="" asp-controller="Dashboard"><i class="fa-solid fa-user-tie fs-4 me-3"></i><span class="nav-span">Applications</span></a>

                    </div>
                </li>

                <li class="span-div my-lg-2">
                    <div class="py-lg-3">
                        <a class="text-decoration-none sidebar-links @Html.IsActive("Dashboard", "Clients")" asp-action="Clients" asp-area="" asp-controller="Dashboard"><i class="fa-regular fa-handshake fs-4 me-3"></i><span class="nav-span">Clients</span></a>
                    </div>
                </li>
                <li>
                    <div class="span-div py-lg-3">
                        <a class="sidebar-links" asp-action="Logout" asp-area="" asp-controller="Authentication">
                            <i class="fa-solid fa-arrow-right-from-bracket fs-4 me-3"></i>
                            <span class="nav-span">Logout</span>
                        </a>
                    </div>

                    <div class="span-div py-lg-3">
                        <a class="sidebar-links" asp-action="CreatePlan" asp-area="" asp-controller="Plans">
                            <i class="fa-solid fa-arrow-right-from-bracket fs-4 me-3"></i>
                            <span class="nav-span">Create Plans</span>
                        </a>
                    </div>
                </li>
            </ul>

            <div class="mt-lg-5 pt-lg-5">
                <div class="d-flex justify-content-center align-items-center">
                    <img class="img-fluid" style="max-width:40px;border-radius:30px"
                         src="data:image/jpeg;base64," alt="ProfilePic" />
                    <a class="nav-span text-decoration-none text-black" asp-controller="User" asp-action="UpdateUser" asp-route-id="@userId">@username<i class="fa-solid fa-pencil"></i></a>
                </div>
            </div>


        </div>
        <div role="main" class="col-lg-9 other-column px-5 col-sm-6 pb-3 h-100">
            @RenderBody()
        </div>



    </div>

    @*    <footer class="border-top footer fixed-bottom p-lg-3 text-muted">
    <div class="container">
    &copy; 2023 - Cit.Apps.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            var isMinimized = false; // Flag-sidebar

            $("#sidebar-toggle").click(function () {
                isMinimized = !isMinimized; // Toggling
                if (isMinimized) {
                    $(".sidebar-parent").css("width", "5%");
                    $(".other-column").css("width", "95%");
                    $(".sidebar-parent .sidebar-links i").removeClass("mx-3");
                    $(".span-div").addClass("text-center");
                    $(".nav-span").hide(); // Hide the text in the sidebar links
                } else {
                    $(".sidebar-parent .sidebar-links i").addClass("mx-3");
                    $(".span-div").removeClass("text-center");
                    $(".sidebar-parent").css("width", ""); // Use an empty string to remove the inline style
                    $(".other-column").css("width", "");
                    $(".nav-span").show(); // Show the text in the sidebar links
                }
            });
        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")
</body>
</html>
